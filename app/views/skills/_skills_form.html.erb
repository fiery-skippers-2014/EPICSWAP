<%= form_for [@user, @skill], remote: true do |f| %>
  <table id="skill-form" class="hidden">
    <tr>
      <td><span class="table_header"><%= f.label :category %></span></td>
      <td colspan="2"><%= f.select(:category_id, @categories)%></td>
    <tr>
    <tr>
      <td><span class="table_header"><%= f.label :name, "Skill" %></span></td>
      <td>
        <%= f.text_field :name, placeholder: "I can teach..." %>
        <div id="skill_errors"></div>
      </td>
      <td><%= f.submit "Add Skill", id: "add_skill" %></td>
    </tr>
    <tr id="skill-dropdown-row">
      <td>&nbsp;</div></td>
      <td><div id="skill_dropdown"></div></td>
      <td>&nbsp;</td>
    </tr>
  </table>
<% end %>
