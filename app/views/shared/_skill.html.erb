<tr id="skill_<%= skill.id %>">
  <td><%= skill.name %></td>
  <td>
    <% if corresponding_interest(skill.name).blank?  %>
      (0 students)
    <% else %>
      (<%= link_to num_users_by_interests(skill.name),interest_path(corresponding_interest(skill.name)) ,id: 'interest_count' %><%= ' student'.pluralize(num_users_by_interests(skill.name)) %>)
    <% end %>
  </td>
  <td><%= link_to 'delete', user_skill_path(@user, skill), remote: true, :method => :delete, class: 'delete-skill', id: "skill-#{skill.id}", :data => { :id => "#{skill.id}"} if current_user == @user %></td>
</tr>
