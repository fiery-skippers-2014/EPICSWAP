<div class="user-header">My Skills</div>
<ul class='my-skills'>
  <% @user.skills.each do |skill| %>
    <li id="skill_<%= skill.id %>">
      <% unless corresponding_interest(skill.name) == nil  %>
        (<%= link_to num_users_by_interests(skill.name),interest_path(corresponding_interest(skill.name)) ,id: 'interest_count' %>)
      <% end %>
      <%= skill.name %>
      <%= link_to 'delete', user_skill_path(@user, skill), remote: true, :method => :delete, class: 'delete-skill', id: "skill-#{skill.id}", :data => { :id => "#{skill.id}"}  if current_user == @user %>
    </li>

  <% end %>
</ul>
