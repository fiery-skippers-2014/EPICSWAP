<h1><%= @user.name %></h1>
<img src="<%= @user.image %>">
<h3><%= @user.tagline %></h3>
<p><%= @user.description %></p>
<div>
  <%= @user.email %><br>
  <%= @user.street %><br>
  <%= @user.city %><br>
  <%= @user.state %><br>
  <%= @user.zip%><br>
  <%= @user.latitude %><br>
  <%= @user.longitude %><br>

</div>

<h2>My Skills</h2>
<ul>
  <% @user.skills.each do |skill| %>
    <li><%= skill.name %></li>
  <% end %>
</ul>

<p>Add a skill</p>
<%= render 'shared/skills_form' %>

<h2>My Interests</h2>
<ul>
  <% @user.interests.each do |interest| %>
    <li><%= interest.name %></li>
  <% end %>
</ul>

<p>Add an interest</p>
<%= render 'shared/interests_form' %>
