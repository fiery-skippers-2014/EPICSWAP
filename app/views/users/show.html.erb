 <h1><%= @user.name %></h1>
<img src="<%= @user.image %>">
<% if current_user == @user %>
  <%= link_to "Edit Profile", edit_user_path(@user) %>
  <%= link_to "Delete Profile", user_path, confirm: "Are you sure you want to delete your profile?", method: :delete %>
  <% else %>

    <p><%= @user.name %> is <%= @distance %> miles away.</p>
    <p><%= @user.name %> Reputation</p>
    <p><%= @user.reputation %></p>

    <%= form_for [@user, @reputation], remote: true do |f| %>
      <%= f.submit 'Rep+' %>
    <% end %>

      <p><%= mail_to @user.email, "Email #{@user.name}", subject: "EpicSwap - Meetup Request" %></p>
  <% end %>

<h3><%= @user.tagline %></h3>
<p><%= @user.description %></p>


<h2>My Skills</h2>
<ul class='my-skills'>
  <% @user.skills.each do |skill| %>
    <li><%= skill.name %></li>
  <% end %>
</ul>

<p>Add a skill</p>
<%= render 'shared/skills_form' %>

<h2>My Interests</h2>
<ul class='my-interests'>
  <% @user.interests.each do |interest| %>
    <li><%= interest.name %></li>
  <% end %>
</ul>

<p>Add an interest</p>

<%= render 'shared/interests_form' %>

