 <h1><%= @user.name %></h1>
<img src="<%= @user.image %>">
<% if current_user == @user %>
  <%= link_to "Edit Profile", edit_user_path(@user), class: 'edit-profile-link'  %>
  <%= link_to "Delete Profile", user_path, confirm: "Are you sure you want to delete your profile?", method: :delete %>
  <div class='edit-user-form hidden'>
    <%= render 'shared/edit_profile' %>
  </div>
  <% else %>

    <p><%= @user.name %> is <%= @distance %> miles away.</p>
    <%= render '/shared/reputation' %>

      <p><%= mail_to @user.email, "Email #{@user.name}", subject: "EpicSwap - Meetup Request" %></p>
  <% end %>

<h3 class="tagline"><%= @user.tagline %></h3>
<p class="description"><%= @user.description %></p>

<h2>My Skills</h2>
<ul class='my-skills'>
  <% @user.skills.each do |skill| %>
    <li id="skill_<%= skill.id %>">
      <% unless corresponding_interest(skill.name) == nil  %>
        (<%= link_to num_users_by_interests(skill.name), interest_path(corresponding_interest(skill.name)) %>)
      <% end %>
      <%= skill.name %>
      <%= link_to 'delete', user_skill_path(@user, skill), remote: true, :method => :delete, class: 'delete-skill', id: "skill-#{skill.id}", :data => { :id => "#{skill.id}"} %>
    </li>
  <% end %>
</ul>

<% if current_user == @user %>
  <%= render 'shared/skills_form' %>
<% end %>

<h2>My Interests</h2>
<ul class='my-interests'>
  <% @user.interests.each do |interest| %>
    <li id="interest_<%= interest.id %>"><%= interest.name %>  <%= link_to 'delete', user_interest_path(@user, interest), remote: true, :method => :delete, class: 'delete-interest', id: "interest-#{interest.id}", :data => { :id => "#{interest.id}"} %></li>
  <% end %>
</ul>


<% if current_user == @user %>
  <%= render 'shared/interests_form' %>
<% end %>

