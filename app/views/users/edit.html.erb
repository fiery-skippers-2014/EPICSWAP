<h1><%= @user.name %>, edit your profile</h1>

<ul>
  <%= form_for @user do |f| %>
    <li><%= f.label :street %>
      <%= f.text_field :street, required: true %></li>
      <li><%= f.label :city %>
      <%= f.text_field :city, required: true %></li>
      <li><%= f.label :state %>
      <%= f.text_field :state, required: true %></li>
      <li><%= f.label :zip %>
      <%= f.text_field :zip, required: true %></li>
      <li><%= f.label :tagline, :size => '140' %>
      <%= f.text_field :tagline %></li>
      <li><%= f.label :description %>
      <%= f.text_area :description %></li>
      <li>
      <%= f.submit  %></li>
  <% end %>
</ul>